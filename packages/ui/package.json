{
  "name": "@astral/ui",
  "version": "3.0.0",
  "browser": "./src/index.ts",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./next": "./next/index.ts",
    "./server": "./src/server/index.ts",
    "./fonts/*": "./fonts/*",
    "./illustrations/*": "./illustrations/*"
  },
  "typesVersions": {
    "*": {
      "next": [
        "src/next.ts"
      ],
      "server": [
        "src/server/index.ts"
      ],
      "declarations": [
        "src/declarations.d.ts"
      ]
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "node pack",
    "publish": "npm publish ./lib",
    "tests": "vitest run --passWithNoTests",
    "tests:ci": "vitest run --passWithNoTests --reporter=junit --outputFile.junit=junit.xml",
    "lint:types": "tsc --noEmit",
    "lint": "eslint --fix --quiet",
    "lint:all": "eslint \"**/*.{ts,tsx}\" --fix --quiet",
    "lint:styles": "stylelint --fix",
    "lint:styles:all": "stylelint \"**/*.{ts,tsx}\" --fix"
  },
  "dependencies": {
    "@astral/icons": "*",
    "@astral/components": "*",
    "@astral/form": "*"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "devDependencies": {
    "@astral/tests": "*"
  }
}
