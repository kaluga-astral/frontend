{
  "name": "@astral/ui",
  "version": "1.0.0",
  "browser": "./src/index.ts",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "tsc --watch",
    "prebuild": "npx rimraf ./lib",
    "build": "commander build",
    "publish": "npm publish ./lib",
    "postbuild": "copyfiles -u 1 src/declaration/*.ts lib",
    "tests": "vitest run",
    "tests:ci": "vitest run --reporter=junit --outputFile.junit=junit.xml",
    "lint:types": "tsc --noEmit",
    "lint": "eslint --fix --quiet",
    "lint:all": "eslint \"**/*.{ts,tsx}\" --fix --quiet",
    "lint:styles": "stylelint --fix",
    "lint:styles:all": "stylelint \"**/*.{ts,tsx}\" --fix"
  },
  "dependencies": {
    "@astral/icons": "*",
    "@astral/components": "*",
    "@astral/form": "*"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "devDependencies": {
    "@astral/tests": "*"
  }
}
